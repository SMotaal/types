{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		// "jsx": "preserve",
		// "checkJs": false,
		"noEmit": true,
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"/packages/specs/*": ["/specs/*"],
			"/packages/markout/*": ["/markout/*"],
			"/*": ["*"]
		},
		"forceConsistentCasingInFileNames": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*",
		"trash",
		"**/trash/*",
		"[[]trash[]]",
		"**/[[]trash[]]/*",
		"[[]more[]]",
		"**/[[]more[]]/*"
	]
}

{
	"private": true,
	"name": "@smotaal/smotaal.github.io",
	"description": "smotaal.io",
	"version": "0.0.0-alpha.2",
	"author": "Saleh Abdel Motaal <saleh@grasppe.com>",
	"repository": "https://github.com/SMotaal/smotaal.github.io.git",
	"license": "MIT",
	"type": "module",
	"exports": {},
	"scripts": {
		"serve": "http-server --cors -s",
		"bundle": "rollup -c rollup.config.js",
		"relink": "nex tasks/relink.js",
		"nes": "pushd $INIT_CWD && nes",
		"components": "[ -d ../components ] && pushd ../components && yarn",
		"experimental": "[ -d ../experimental ] && pushd ../experimental && yarn",
		"markup": "[ -d ../markup ] && pushd ../markup && yarn",
		"pholio": "[ -d ../pholio ] && pushd ../pholio && yarn",
		"quench": "[ -d ../quench ] && pushd ../quench && yarn"
	},
	"devDependencies": {
		"@types/node": "*",
		"http-server": "*",
		"prettier": "*",
		"rollup": "*",
		"typescript": "*",
		"@smotaal/esm": "SMotaal/esm"
	},
	"resolutions": {
		"SMotaal/components": "../components",
		"SMotaal/esm": "../esm",
		"SMotaal/experimental": "../experimental",
		"SMotaal/markup": "../markup",
		"SMotaal/pholio": "../pholio",
		"SMotaal/quench": "../quench"
	},
	"workspaces": {
		"packages": [
			"../experimental",
			"../components",
			"../markup",
			"../pholio",
			"../server",
			"../quench"
		],
		"nohoist": [
			"**/components",
			"**/experimental",
			"**/markup",
			"**/pholio",
			"**/server",
			"**/quench"
		]
	}
}
